{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "dependencies": {
    "@chakra-ui/react": "^1.8.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@remix-run/cloudflare-workers": "^1.2.1",
    "@remix-run/react": "^1.2.1",
    "axios": "^0.26.0",
    "dotenv": "^16.0.0",
    "framer-motion": "^6.2.6",
    "graphql": "^16.3.0",
    "nodemailer": "^6.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "remix": "^1.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@graphql-codegen/cli": "^1.9.0",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-graphql-request": "^4.3.7",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@remix-run/dev": "^1.2.1",
    "@remix-run/eslint-config": "^1.2.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "miniflare": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-workers",
    "build": "cross-env NODE_ENV=production remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js",
    "deploy": "npm run build && wrangler publish",
    "generate-shopify": "graphql-codegen --require dotenv/config --config app/utils/shopify/shopifyCodegen.yml",
    "generate-graphCMS": "graphql-codegen --require dotenv/config --config app/utils/graphCMS/graphCMSCodegen.yml"
  },
  "main": "build/index.js"
}
